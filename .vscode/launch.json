    "version": "0.2.0",
    "configurations": [

        {
            "name": "Interactive Simulation",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${file}",
            "args": [
                "-DryRun",
                "-ImagesPath F:/OS/Windows/WIM"
            ]
        },
        {
            "name": "Automagic Simulation",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${file}",
            "args": [
                "-TargetDisk 0",
                "-WimFile F:\\OS\\Windows\\WIM\\install.esd",
                "-WimIndex 1",
                "-Automagic",
                "-YesImAbsolutelySure",
                "-Shutdown",
                "-DryRun"
            ]
        }
    ]
}